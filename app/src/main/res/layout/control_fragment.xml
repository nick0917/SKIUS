<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED 설정"
                android:layout_gravity="top"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED 전원"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Switch
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/control_power"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밝기"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <SeekBar
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/control_brightness"
                android:max="2"
                android:progress="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테마"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/control_spinner_theme"
                android:gravity="right">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="패턴"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/control_spinner_pattern"
                android:gravity="right">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="패턴속도"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <SeekBar
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/control_pattern_speed"
                android:max="2"
                android:progress="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="색상"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/control_redButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp" />

            <Button
                android:id="@+id/control_greenButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp" />

            <Button
                android:id="@+id/control_blueButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp" />

            <Button
                android:id="@+id/control_yellowButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp"/>

            <Button
                android:id="@+id/control_purpleButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp" />

            <Button
                android:id="@+id/control_aquaButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp"/>

            <Button
                android:id="@+id/control_whiteButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="1dp"/>

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>